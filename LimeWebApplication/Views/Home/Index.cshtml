@{
    ViewBag.Title = "Home Page";
}

@model LimeTest.Models.HomeIndexFormModel

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('#sd_picker').datepicker({
                format: "dd/mm/yyyy"
            });
            $('#ed_picker').datepicker({
                format: "dd/mm/yyyy"
            });
        });
    </script>
}
<h1>
    Генерация отчета по продажам
</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.StartDate)
        <input name= "StartDate" class="form-control datepicker" data-date-format="dd/mm/yyyy" id="sd_picker" placeholder="click here">
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        <input name="EndDate" class="form-control datepicker" data-date-format="dd/mm/yyyy" id="ed_picker" placeholder="click here">
    </div>

    <button type="submit" class="btn btn-default">Отправить отчет</button>
}
